# Evri Test Environment Configuration
# This file contains environment-specific settings for test execution

# Environment Selection (test | staging | production)
TEST_ENV=staging

# Environment URLs (selected by TEST_ENV)
BASE_URL_TEST=https://test.evri.com
BASE_URL_STAGING=https://staging.evri.com
BASE_URL_PRODUCTION=https://www.evri.com

# Execution
HEADLESS=false

# Timeouts (milliseconds)
DEFAULT_TIMEOUT=60000
EXPECT_TIMEOUT=10000
ACTION_TIMEOUT=15000
NAVIGATION_TIMEOUT=30000

# Test Execution
PARALLEL_WORKERS=4
CI_RETRIES=2

# Viewport
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080

# Reporting & Artifacts
REPORT_PATH=./playwright-report
TRACE_MODE=retain-on-failure
SCREENSHOT_MODE=only-on-failure
VIDEO_MODE=retain-on-failure

# CI/CD
CI=false

# Optional: API Keys (if needed for future tests)
# API_KEY=your-api-key-here
# AUTH_TOKEN=your-auth-token-here
# Optional: test data overrides (prefer keeping in code defaults)
# TEST_FROM_POSTCODE=
# TEST_TO_POSTCODE=
# TEST_WEIGHT=
