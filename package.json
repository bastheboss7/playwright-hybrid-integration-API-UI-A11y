{
  "name": "evri-playwright-automation",
  "version": "1.0.0",
  "description": "Enterprise-grade Playwright test automation framework for Evri Parcel Delivery",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:chrome": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:safari": "playwright test --project=webkit",
    "test:mobile": "playwright test --project=mobile-chrome",
    "test:smoke": "playwright test evri-smoke.spec.ts",
    "test:prohibited": "playwright test evri-prohibited-items.spec.ts",
    "clean": "rm -rf test-results playwright-report allure-results",
    "clean:test": "npm run clean && npm test",
    "report": "playwright show-report",
    "report:open": "playwright show-report playwright-report",
    "ui": "playwright test --ui",
    "codegen": "playwright codegen https://www.evri.com",
    "install:browsers": "playwright install"
  },
  "keywords": [
    "playwright",
    "typescript",
    "e2e",
    "automation",
    "testing",
    "evri",
    "enterprise"
  ],
  "author": "Automation Team",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.3",
    "allure-playwright": "^3.4.3",
    "dotenv": "^17.2.3",
    "playwright": "^1.57.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
